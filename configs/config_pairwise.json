{
  "gpu_num" : [1],
  "bert_model": "allenai/scibert_scivocab_uncased",
  "bert_hidden_size": 768,
  "hidden_layer": 768,
  "dropout": 0.3,
  "with_mention_width": true,
  "with_head_attention": true,
  "embedding_dimension": 20,

  "random_seed": 0,
  "epochs": 5,
  "batch_size": 32,
  "learning_rate": 1e-4,
  "weight_decay": 0,
  "loss": "bce",
  "optimizer": "adam",
  "adam_epsilon": 1e-8,
  "segment_window": 512,
  "neg_samp": true,

  "log_path": "logs/pairwise_scorer/",
  "training_set": "data/train.jsonl",
  "dev_set": "data/dev.jsonl",
  "model_path": "checkpoints/sci_model/scibert/model"
}